	<div class="row">
		<div class="col-sm-12">
			<div class="form-group">
				<%= f.label :members_involved_detail, "Who was involved?", :class => "control-label" %>
				<%= f.text_area :members_involved_detail, :class => "form-control", :rows => "3" %>
			</div>
		</div>
	</div>
</div>

<div id="<%= form_tag_id(f.object_name, :staff) %>">
	<div class="row">
		<div class="col-sm-12">
			<div class="form-group">
				<%= f.label :staff_involved_detail, "Who was involved?", :class => "control-label" %>
				<%= f.text_area :staff_involved_detail, :class => "form-control", :rows => "3" %>
			</div>
		</div>
	</div>
</div>

<div id="<%= form_tag_id(f.object_name, :other) %>">
	<div class="row">
		<div class="col-sm-12">
			<div class="form-group">
				<%= f.label :other_involved_detail, "Who was involved?", :class => "control-label" %>
				<%= f.text_area :other_involved_detail, :class => "form-control", :rows => "3" %>
