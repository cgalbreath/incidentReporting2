</div>

<script type="text/javascript">
	$(document).ready(function(){
	    $('#<%= form_tag_id(f.object_name, :members_involved) %>').change(function() {
			if ( $(this).is(':checked') )
			{
	        	$("div#<%= form_tag_id(f.object_name, :members) %>").show();
	        }
	        else
			{
	        	$("div#<%= form_tag_id(f.object_name, :members) %>").hide();
	        }
	    }).trigger('change');

	    $('#<%= form_tag_id(f.object_name, :staff_involved) %>').change(function() {
			if ( $(this).is(':checked') )
			{
	        	$("div#<%= form_tag_id(f.object_name, :staff) %>").show();
	        }
	        else
			{
	        	$("div#<%= form_tag_id(f.object_name, :staff) %>").hide();
	        }
	    }).trigger('change');

	    $('#<%= form_tag_id(f.object_name, :other_involved) %>').change(function() {
			if ( $(this).is(':checked') )
			{
	        	$("div#<%= form_tag_id(f.object_name, :other) %>").show();
	        }
	        else
			{
	        	$("div#<%= form_tag_id(f.object_name, :other) %>").hide();
	        }
	    }).trigger('change');

	    $('#<%= form_tag_id(f.object_name, :guardian_notified) %>').change(function() {
			if ( $(this).is(':checked') )
			{
	        	$("div#<%= form_tag_id(f.object_name, :guardian_info) %>").show();
	        }
	        else
			{
	        	$("div#<%= form_tag_id(f.object_name, :guardian_info) %>").hide();
	        }
	    }).trigger('change');
	});
</script>