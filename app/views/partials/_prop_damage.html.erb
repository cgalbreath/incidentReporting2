<%= f.fields_for :property_damages do |ff| %>
<div class="row">
	<div class="col-sm-12">
		<div class="form-group">
			<%= ff.label :prop_description, "What was damaged?", :class => "control-label" %>
			<%= ff.text_area :prop_description, :class => "form-control", :rows => "3" %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-sm-12">
		<div class="form-group">
			<%= ff.label :prop_occurance, "How did it happen?", :class => "control-label" %>
			<%= ff.text_area :prop_occurance, :class => "form-control", :rows => "3" %>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-sm-1">
	</div>
	<div class="col-sm-1">
		<div class="form-group">
			<%= ff.label :prop_emergency_notified, "Police Report filed?",:class => "control-label" %>
	        <%= ff.check_box :prop_emergency_notified, :class => "form-control" %>
		</div>
	</div>
	<div class="col-sm-1">
	</div>
	<div class="col-sm-1">
	</div>
	<div class="col-sm-1">
	</div>
	<div class="col-sm-1">
		<div class="form-group">
			<%= ff.label :prop_insurance_filed, "Insurance claim filed?", :class => "control-label" %>
	        <%= ff.check_box :prop_insurance_filed, :class => "form-control" %>
		</div>
	</div>
	<div class="col-sm-1">
	</div>
	<div class="col-sm-1">
	</div>
	<div class="col-sm-1">
	</div>
	<div class="col-sm-1">
		<div class="form-group">
			<%= ff.label :prop_members_involved, :class => "control-label" %>
			<%= ff.check_box :prop_members_involved, :class => "form-control" %>
		</div>
	</div>
</div>

<div id="prop_damage_incident_detail_emergency_info">
	<div class="row">
		<div class="col-sm-12">
			<div class="form-group">
				<%= ff.label :prop_emergency_detail, :class => "control-label" %>
				<%= ff.text_area :prop_emergency_detail, :class => "form-control", :rows => "3" %>
			</div>
		</div>
	</div>
</div>

<div id="prop_damage_incident_detail_insurance_info">
	<div class="row">
		<div class="col-sm-12">
			<div class="form-group">
				<%= ff.label :prop_insurance_filed_detail, :class => "control-label" %>
				<%= ff.text_area :prop_insurance_filed_detail, :class => "form-control", :rows => "3" %>
			</div>
		</div>
	</div>
</div>

<div id="prop_damage_incident_detail_members">
	<div class="row">
		<div class="col-sm-12">
			<div class="form-group">
				<%= ff.label :prop_members_involved_detail, "Who was involved?", :class => "control-label" %>
				<%= ff.text_area :prop_members_involved_detail, :class => "form-control", :rows => "3" %>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-sm-12">
		<div class="form-group">
			<%= ff.label :prop_followup, "Property disposition or closure?", :class => "control-label" %>
			<%= ff.text_area :prop_followup, :class => "form-control", :rows => "3" %>
		</div>
	</div>
</div>
<% end %>

<script type="text/javascript">
	$(document).ready(function(){
		$('#prop_damage_incident_detail_members_involved').change(function() {
			if ( $(this).is(':checked') )
			{
	        	$("div#prop_damage_incident_detail_members").show();
	        }
	        else
			{
	        	$("div#prop_damage_incident_detail_members").hide();
	        }
	    }).trigger('change');
	    
		$('#prop_damage_incident_detail_emergency_notified').change(function() {
			if ( $(this).is(':checked') )
			{
	        	$("div#prop_damage_incident_detail_emergency_info").show();
	        }
	        else
			{
	        	$("div#prop_damage_incident_detail_emergency_info").hide();
	        }
	    }).trigger('change');
	    $('#prop_damage_incident_detail_insurance_filed').change(function() {
			if ( $(this).is(':checked') )
			{
	        	$("div#prop_damage_incident_detail_insurance_info").show();
	        }
	        else
			{
	        	$("div#prop_damage_incident_detail_insurance_info").hide();
	        }
	    }).trigger('change');
	});
</script>