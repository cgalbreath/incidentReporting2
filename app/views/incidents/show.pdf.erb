<div class='col-md-8 col-md-offset-2 panel panel-default'>
  <div class='panel-body'>

    <h2>Incident</h2>
    <p>ID: <%= @incident.id %></p>
    
    <h4>Summary</h4>
    <div class='panel panel-default'>
      <div class='panel-body'>
        <table class='table table-hover no-border-top'>
          <tr>
            <td>Incident Type:</td>
            <td><%= @incident.incident_type %></td>
          </tr>
          <tr>
            <td>Date of Incident:</td>
            <td><%= @incident.date_of_incident %></td>
          </tr>
          <tr>
            <td>Time of Incident:</td>
            <td><%= @incident.time_of_incident %></td>
          </tr>
          <tr>
            <td>Reporter:</td>
            <td><%= @incident.reporter %></td>
          </tr>
          <tr>
            <td>Witness:</td>
            <td><%= @incident.witness %></td>
          </tr>
          <tr>
            <td>Location:</td>
            <td><%= @incident.location %></td>
          </tr>
          <tr>
            <td>Address:</td>
            <td><%= @incident.address %></td>
          </tr>
          <tr>
            <td>Description:</td>
            <td><%= @incident.description %></td>
          </tr>
          <tr>
            <td>Area:</td>
            <td><%= @incident.loc_area %></td>
          </tr>
          <tr>
            <td>First Aid:</td>
            <td><%= @incident.first_aid %></td>
          </tr>
          <tr>
            <td>Parent/Guardian notified:</td>
            <td><%= @incident.guardian_notified %></td>
          </tr>
          <tr>
            <td>911 Called:</td>
            <td><%= @incident.emergency_notified %></td>
          </tr>
          <tr>
            <td>Picked up:</td>
            <td><%= @incident.parent_pickup %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>