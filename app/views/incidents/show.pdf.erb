<div class='col-md-8 col-md-offset-2 panel panel-default'>
  <div class='panel-body'>

    <h2>Incident</h2>
    <p>ID: <%= @incident.id %></p>
    
    <h4>Summary</h4>
    <div class='panel panel-default'>
      <div class='panel-body'>
        <table class='table table-hover no-border-top'>
          <tr>
            <td>Date of Incident:</td>
            <td><%= @incident.date_of_incident %></td>
          </tr>
          <tr>
            <td>Reporter:</td>
            <td><%= @incident.reporter %></td>
          </tr>
          <tr>
            <td>Witness:</td>
            <td><%= @incident.witness %></td>
          </tr>
          <tr>
            <td>Location:</td>
            <td><%= @incident.location_id %></td>
          </tr>
          <tr>
            <td>Address:</td>
            <td><%= @incident.physical_address %></td>
          </tr>
          <tr>
            <td>Description:</td>
            <td><%= @incident.description %></td>
          </tr>
          <tr>
            <td>Area:</td>
            <td><%= @incident.area_id %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>