<div class='col-md-10 col-md-offset-1'>
  <h2>Facilities</h2>
  <%= link_to "New Facility", new_facility_path, remote: true, class: "btn btn-primary" %>
  <hr>
  <div class='panel panel-default'>
    <div class='panel-body'>
      <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered">
          <thead>
            <tr>
              <th>Facility Name</th>
              <th>Address</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody id="facilities">
          <div class = "sort_paginate_ajax"><%= render @facilities %></div>
          </tbody>
        </table>
        <%= will_paginate @facilities, renderer: BootstrapPagination::Rails %>
      </div>

      <%= render 'dialog' %>

    </div>
  </div>
</div>