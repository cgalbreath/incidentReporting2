<tr id="facility_<%= facility.id %>">
    <td><%= facility.name %></td>
    <td><%= facility.address %></td>
    <td>
	    <%= link_to 'Edit', edit_facility_path(facility), remote: true, :class => 'btn btn-sm btn-primary' %>
	</td>
    <td>
	    <%= link_to 'Delete', facility, remote: true, :method => :delete, data: {confirm: "Delete Facility: #{facility.id}"}, :class => 'btn btn-sm btn-primary' %>
	</td>
</tr>