<%= nested_form_for(@facility, remote: true, :html => { :role => "form" }) do |f| %>
  <div id="error_explanation" class="bg-danger text-danger">

  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :name, :class => "control-label" %>
        <%= f.text_field :name, :class => "form-control" %>
      </div>  
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <%= f.label :address, :class => "control-label" %>
        <%= f.text_field :address, :class => "form-control" %>
      </div>  
    </div>
  </div>

  <div class="row">
    <%= fields_for(:facility_areas) do |fa| %>
      <div class="col-sm-6">
        <div class="form-group">
          <%= fa.label "Areas" %>
          <%= collection_select(:areas, :id, Area.all, :id, :name, {:selected => @area_select}, {:multiple => true, :class => 'form-control', :size =>10 }) %>
        </div>  
      </div>
    <% end %>
    <%= fields_for(:facility_programs) do |fp| %>
      <div class="col-sm-6">
        <div class="form-group">
          <%= fp.label "Programs" %>
          <%= collection_select(:programs, :id, Program.all, :id, :name, {:selected => @program_select}, {:multiple => true, :class => 'form-control', :size =>10 } ) %>
        </div>  
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= f.submit  @facility.new_record? ? "Create Facility" : "Update Facility", :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>