<div class='col-md-10 col-md-offset-1'>
  <h2>Users</h2>
  <%= link_to "New User", new_user_path, remote: true, class: "btn btn-primary" %>
  <hr>
  <div class='panel panel-default'>
    <div class='panel-body'>
      <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered">
          <thead>
            <tr>
              <th>Username</th>
              <th>Email</th>
              <th>Admin</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody id="users">
          <div class = "sort_paginate_ajax"><%= render @users %></div>
          </tbody>
        </table>
        <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
      </div>

      <%= render 'dialog' %>

    </div>
  </div>
</div>