
<%= nested_form_for(@user, remote: true, :html => { :role => "form" }) do |f| %>
  <div id="error_explanation" class="bg-danger text-danger">

  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :email, :class => "control-label" %>
        <%= f.text_field :email, :class => "form-control" %>
      </div>  
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :username, :class => "control-label" %>
        <%= f.text_field :username, :class => "form-control" %>
      </div>  
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <ul class="list-group">
          <li class="list-group-item">
          Admin:
            <div class="material-switch pull-right" style="padding-top: 10px;">
              <%= f.check_box :admin %>
              <label for="<%= form_tag_id(f.object_name, :admin) %>" class="label-primary"></label>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div id="isAdmin">
    <div class="row">
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :facility_id, :class => "control-label" %>
          <%= f.select :facility_id, options_for_select(Facility.all.collect {|p| [ p.name, p.id ] }, @user.facility_id), { :include_hidden => false }, {:multiple => true, :class => 'form-control', :size =>10 } %>
        </div>  
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :program_id, :class => "control-label" %>
          <%= f.select :program_id, options_for_select(Program.all.collect {|p| [ p.name, p.id ] }, @user.program_id), { :include_hidden => false }, {:multiple => true, :class => 'form-control', :size =>10 } %>
        </div>  
      </div>
    </div>
  </div>

  <div class="row">
    <div class="text-center">
      <div class="form-group">
        <%= f.submit  @user.new_record? ? "Create User" : "Update User", :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>