<div class='col-md-10 col-md-offset-1'>
  <div class='panel panel-default'>
	<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, style: "margin-bottom: 0px;"} do |f| %>
		<div class="panel-heading clearfix">
      <h3>Create User information:</h3>
    </div>
    <div class='panel-body'>
      <div class='col-md-10 col-md-offset-1'>
  			<%= devise_error_messages! %>
  			<%= f.hidden_field :invitation_token %>

  			<div class="row">
          <div class="col-sm-6">
            <div class="field">
              <%= f.label :username, :class => "control-label" %>
              <%= f.text_field :username, :class => "form-control", autofocus: true %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_username %></div>
            <% end %>
          </div>
        </div>

				<div class="row">
					<div class="col-sm-6">
						<div class="field">
							<%= f.label :first_name, :class => "control-label" %>
							<%= f.text_field :first_name, :class => "form-control" %>
						</div>
					</div>
					<div class="col-sm-6">
						<div class="field">
							<%= f.label :last_name, :class => "control-label" %>
							<%= f.text_field :last_name, :class => "form-control" %>
						</div>
					</div>
				</div>
				<div class="row">
          <div class="col-sm-6">
            <div class="field">
              <%= f.label :phone, :class => "control-label" %>
              <%= f.text_field :phone, :class => "form-control" %>
            </div>
          </div>
        </div>
        <br />
        <br />
        <div class="row">
          <div class="col-sm-6">
            <div class="field">
						  <% if f.object.class.require_password_on_accepting %>
						  <p><%= f.label :password %><br />
						  <%= f.password_field :password %></p>
						</div>
					</div>
					<div class="col-sm-6">
	          <div class="field">
						  <p><%= f.label :password_confirmation %><br />
						  <%= f.password_field :password_confirmation %></p>
						  <% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
  	<div class="panel-footer clearfix">
      <div class="text-center">
        <div class="actions">
          <%= f.submit "Create Account", :class => "btn btn-success" %>
        </div>
      </div>
    </div>
		<% end %>
  </div>
</div>
