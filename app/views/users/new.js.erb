// Add the dialog title
$('#dialog h3').html("<i class='glyphicon glyphicon-plus'></i> Add New User");
 
// Render the new form
$('.modal-body').html('<%= j render("form") %>');
 
// Show the dynamic dialog
$('#dialog').modal("show");
 
// Set focus to the first element
$('#dialog').on('shown.bs.modal', function () {
	  $('.first_input').focus()
  })

$('#user_admin').on('change', function() {
	if ( $(this).is(':checked') )
	{
    	$("div#isAdmin").hide();
    }
    else
	{
    	$("div#isAdmin").show();
    }
}).trigger('change');