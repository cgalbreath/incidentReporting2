<tr id="area_<%= area.id %>">
    <td><%= area.name %></td>
    <td>
	    <%= link_to 'Edit', edit_area_path(area), remote: true, :class => 'btn btn-sm btn-primary' %>
	</td>
    <td>
	    <%= link_to 'Delete', area, remote: true, :method => :delete, data: {confirm: "Delete Area: #{area.id}"}, :class => 'btn btn-sm btn-primary' %>
	</td>
</tr>